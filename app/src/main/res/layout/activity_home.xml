<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_gradient">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="@color/bb_primary"
        android:title="RubenApp"
        android:titleTextColor="@color/bb_on_primary"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_logo_circle"
            android:padding="22dp"
            android:contentDescription="@string/app_name"
            android:tint="@android:color/white"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_tasks_24"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¡Bienvenido a la app!"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/bb_on_surface"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestiona tus tareas de forma sencilla"
            android:textColor="@color/bb_on_surface"
            android:layout_marginTop="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerTareas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver tareas"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
